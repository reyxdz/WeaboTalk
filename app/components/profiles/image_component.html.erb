<div class="
  <%= size_classes %>
  rounded-full
  shrink-0
  overflow-hidden
  flex
  items-center
  justify-center
  font-semibold
  text-sm
  border-2
  border-slate-700/50
  <%= css_class %>
  <%= avatar_url ? 'bg-slate-700/50' : 'bg-gradient-to-br from-purple-500 to-pink-500 text-white' %>
">
  <% if avatar_url %>
    <%= image_tag avatar_url, alt: username, class: "w-full h-full object-cover" %>
  <% else %>
    <span title="<%= username %>"><%= initials %></span>
  <% end %>
</div>
