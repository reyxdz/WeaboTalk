<div class="min-h-screen bg-linear-to-br from-blue-50 to-indigo-100 flex items-center justify-center px-4 py-12">
  <div class="bg-white rounded-2xl shadow-2xl w-full max-w-md p-8">
    <!-- Header -->
    <div class="text-center mb-8">
      <div class="text-5xl font-bold text-indigo-600 mb-2">WT</div>
      <h1 class="text-3xl font-bold text-gray-900 mb-2">WeaboTalk</h1>
      <p class="text-gray-600">Join the anime community</p>
    </div>

    <!-- Form -->
    <%= form_with model: resource, as: resource_name, local: true, url: user_registration_path, class: "space-y-4" do |form| %>
      <!-- Error Messages -->
      <% if resource.errors.any? %>
        <div class="bg-red-50 border-l-4 border-red-500 p-4 mb-4">
          <h4 class="font-semibold text-red-800 mb-2">
            <%= pluralize(resource.errors.count, "error") %> prohibited this registration:
          </h4>
          <ul class="list-disc list-inside text-red-700 text-sm space-y-1">
            <% resource.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <!-- Email Field -->
      <div>
        <%= form.label :email, "Email Address", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.email_field :email,
            class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent",
            placeholder: "you@example.com",
            autofocus: true,
            autocomplete: "email" %>
      </div>

      <!-- Password Field -->
      <div>
        <%= form.label :password, "Password", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.password_field :password,
            class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent",
            placeholder: "At least 8 characters",
            autocomplete: "new-password" %>
        <p class="text-xs text-gray-500 mt-1">Minimum 8 characters</p>
      </div>

      <!-- Password Confirmation Field -->
      <div>
        <%= form.label :password_confirmation, "Confirm Password", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.password_field :password_confirmation,
            class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent",
            placeholder: "Confirm your password",
            autocomplete: "new-password" %>
      </div>

      <!-- Submit Button -->
      <button type="submit" class="w-full bg-indigo-600 hover:bg-indigo-700 text-white font-semibold py-2 px-4 rounded-lg transition duration-200 mt-6">
        Create Account
      </button>
    <% end %>

    <!-- Sign In Link -->
    <div class="mt-6 text-center">
      <p class="text-gray-600 text-sm">
        Already have an account?
        <%= link_to "Sign in here", new_user_session_path, class: "text-indigo-600 hover:text-indigo-700 font-semibold" %>
      </p>
    </div>

    <!-- Terms Notice -->
    <div class="mt-4 p-4 bg-blue-50 border-l-4 border-blue-400 rounded">
      <p class="text-blue-800 text-xs text-center">
        By creating an account, you agree to our Terms of Service and Privacy Policy
      </p>
    </div>
  </div>
</div>
