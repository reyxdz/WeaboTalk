<div class="min-h-screen bg-linear-to-br from-blue-50 to-indigo-100 flex items-center justify-center px-4 py-12">
  <div class="bg-white rounded-2xl shadow-2xl w-full max-w-md p-8">
    <!-- Flash Messages -->
    <% if alert.present? %>
      <div class="bg-yellow-50 border-l-4 border-yellow-500 p-4 mb-6 rounded">
        <p class="text-yellow-800 text-sm font-semibold"><%= alert %></p>
      </div>
    <% end %>

    <% if notice.present? %>
      <div class="bg-green-50 border-l-4 border-green-500 p-4 mb-6 rounded">
        <p class="text-green-800 text-sm font-semibold"><%= notice %></p>
      </div>
    <% end %>

    <!-- Header -->
    <div class="text-center mb-8">
      <div class="text-6xl mb-4">✓</div>
      <h1 class="text-3xl font-bold text-gray-900 mb-2">Check Your Email</h1>
      <p class="text-gray-600">Almost there! Let's confirm your email address</p>
    </div>

    <!-- Main Message -->
    <div class="bg-blue-50 border-l-4 border-blue-500 p-4 mb-6 rounded">
      <p class="text-blue-900 text-sm">
        We just sent a confirmation email to <strong><%= @user_email || resource.email %></strong>. 
        Please click the link in the email to activate your account and start using WeaboTalk!
      </p>
    </div>

    <!-- Instructions -->
    <div class="space-y-4 mb-6">
      <p class="text-gray-700 font-semibold mb-3">What to do next:</p>
      <ol class="space-y-3">
        <li class="flex items-start">
          <span class="shrink-0 flex items-center justify-center h-6 w-6 rounded-full bg-indigo-600 text-white text-sm font-semibold mr-3">1</span>
          <span class="text-gray-700">Check your email inbox</span>
        </li>
        <li class="flex items-start">
          <span class="shrink-0 flex items-center justify-center h-6 w-6 rounded-full bg-indigo-600 text-white text-sm font-semibold mr-3">2</span>
          <span class="text-gray-700">Look for "Welcome to WeaboTalk" email</span>
        </li>
        <li class="flex items-start">
          <span class="shrink-0 flex items-center justify-center h-6 w-6 rounded-full bg-indigo-600 text-white text-sm font-semibold mr-3">3</span>
          <span class="text-gray-700">Click the confirmation link</span>
        </li>
        <li class="flex items-start">
          <span class="shrink-0 flex items-center justify-center h-6 w-6 rounded-full bg-indigo-600 text-white text-sm font-semibold mr-3">4</span>
          <span class="text-gray-700">You'll be automatically logged in!</span>
        </li>
      </ol>
    </div>

    <!-- Expiry Notice -->
    <div class="bg-yellow-50 border-l-4 border-yellow-500 p-4 mb-6 rounded">
      <p class="text-yellow-900 text-sm">
        ⏰ <strong>Important:</strong> This confirmation link expires in 3 days. Please confirm your email before then.
      </p>
    </div>

    <!-- Resend Section -->
    <div class="border-t pt-6">
      <p class="text-gray-700 text-sm mb-4 font-semibold">Didn't receive the email?</p>
      
      <%= form_with model: resource, as: resource_name, local: true, url: user_confirmation_path, html: { data: { controller: "form-validation", validation_url: validate_form_path, validation_type: "confirmation" } }, class: "space-y-4" do |form| %>
        <div>
          <%= form.label :email, "Your Email Address", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.email_field :email,
              class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent",
              placeholder: "Enter your email",
              value: @user_email || resource.email %>
        </div>

        <button type="submit" class="w-full bg-indigo-600 hover:bg-indigo-700 text-white font-semibold py-2 px-4 rounded-lg transition duration-200">
          Resend Confirmation Email
        </button>
      <% end %>
    </div>

    <!-- Links -->
    <div class="mt-6 pt-6 border-t space-y-3 text-center">
      <p class="text-gray-600 text-sm">
        <%= link_to "Back to Sign In", new_user_session_path, class: "text-indigo-600 hover:text-indigo-700 font-semibold" %>
      </p>
      <p class="text-gray-600 text-sm">
        <%= link_to "Back to Home", root_path, class: "text-indigo-600 hover:text-indigo-700 font-semibold" %>
      </p>
    </div>

    <!-- Security Notice -->
    <div class="mt-4 p-4 bg-blue-50 border-l-4 border-blue-400 rounded">
      <p class="text-blue-800 text-xs text-center">
        Rest assured, your account is safe. We never share your email.
      </p>
    </div>
  </div>
</div>
