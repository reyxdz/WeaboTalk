        </svg>
        <div>
          <p class="font-semibold text-gray-900">Join Communities</p>
          <p class="text-gray-600 text-sm">Participate in anime discussions</p>
        </div>
      </div>
    </div>

    <!-- Action Buttons -->
    <div class="space-y-3">
      <%= link_to "Go to Home", root_path, class: "w-full block text-center bg-green-600 hover:bg-green-700 text-white font-semibold py-3 px-4 rounded-lg transition duration-200" %>
      <% if user_signed_in? %>
        <%= link_to "View Profile", root_path, class: "w-full block text-center border-2 border-gray-300 hover:border-gray-400 text-gray-700 font-semibold py-3 px-4 rounded-lg transition duration-200" %>
