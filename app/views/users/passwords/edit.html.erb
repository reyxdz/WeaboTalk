<div class="min-h-screen bg-linear-to-br from-blue-50 to-indigo-100 flex items-center justify-center px-4 py-12">
  <div class="bg-white rounded-2xl shadow-2xl w-full max-w-md p-8">
    <!-- Header -->
    <div class="text-center mb-8">
      <div class="text-5xl mb-4">âœ¨</div>
      <h1 class="text-3xl font-bold text-gray-900 mb-2">Create New Password</h1>
      <p class="text-gray-600">Enter a new password to complete the reset process.</p>
    </div>

    <!-- Info Box -->
    <div class="bg-green-50 border-l-4 border-green-500 p-4 mb-6 rounded">
      <p class="text-green-900 text-sm font-semibold">
        âœ“ Your reset link is valid! Create a strong password.
      </p>
    </div>

    <!-- Form -->
    <%= form_with model: resource, as: resource_name, local: true, url: user_password_path, method: :put, html: { data: { controller: "form-validation", validation_url: validate_form_path, validation_type: "password_change" } }, class: "space-y-4" do |form| %>
      <!-- Hidden Token Field -->
      <%= form.hidden_field :reset_password_token, value: resource.reset_password_token %>

      <!-- Error Messages -->
      <% if resource.errors.any? %>
        <div class="bg-red-50 border-l-4 border-red-500 p-4 mb-4 rounded">
          <h4 class="font-semibold text-red-800 mb-2">
            <%= pluralize(resource.errors.count, "error") %> found:
          </h4>
          <ul class="list-disc list-inside text-red-700 text-sm space-y-1">
            <% resource.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <!-- New Password Field -->
      <div>
        <%= form.label :password, "New Password", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.password_field :password,
            class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent",
            placeholder: "Minimum 8 characters",
            autocomplete: "new-password",
            required: true %>
        <p class="text-gray-500 text-xs mt-1">Must be at least 8 characters long</p>
      </div>

      <!-- Password Confirmation Field -->
      <div>
        <%= form.label :password_confirmation, "Confirm Password", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.password_field :password_confirmation,
            class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent",
            placeholder: "Re-enter your password",
            autocomplete: "new-password",
            required: true %>
      </div>

      <!-- Password Requirements -->
      <div class="bg-gray-50 p-4 rounded border border-gray-200">
        <p class="text-gray-700 text-xs font-semibold mb-2">ðŸ“‹ Password Requirements:</p>
        <ul class="text-gray-600 text-xs space-y-1">
          <li id="length-check" class="flex items-center">
            <span class="w-4 h-4 rounded-full border-2 border-gray-300 mr-2 flex items-center justify-center">
              <span id="length-icon">â—‹</span>
            </span>
            At least 8 characters
          </li>
          <li id="match-check" class="flex items-center">
            <span class="w-4 h-4 rounded-full border-2 border-gray-300 mr-2 flex items-center justify-center">
              <span id="match-icon">â—‹</span>
            </span>
            Passwords match
          </li>
        </ul>
      </div>

      <!-- Submit Button -->
      <button type="submit" class="w-full bg-indigo-600 hover:bg-indigo-700 text-white font-semibold py-2 px-4 rounded-lg transition duration-200 mt-6">
        Reset Password
      </button>
    <% end %>

    <!-- Back to Sign In Link -->
    <div class="mt-6 text-center">
      <p class="text-gray-600 text-sm">
        <%= link_to "Back to Sign In", new_user_session_path, class: "text-indigo-600 hover:text-indigo-700 font-semibold" %>
      </p>
    </div>

    <!-- Security Notice -->
    <div class="mt-4 p-4 bg-blue-50 border-l-4 border-blue-400 rounded">
      <p class="text-blue-800 text-xs text-center">
        ðŸ”’ Your password is encrypted and secure. We'll never share it.
      </p>
    </div>
  </div>
</div>

<!-- Client-side password validation -->
<script>
document.addEventListener('DOMContentLoaded', function() {
  const passwordField = document.querySelector('input[name="user[password]"]');
  const confirmField = document.querySelector('input[name="user[password_confirmation]"]');
  const lengthCheck = document.getElementById('length-check');
  const matchCheck = document.getElementById('match-check');

  function updateChecks() {
    const password = passwordField.value;
    const confirmed = confirmField.value;

    // Check length
    if (password.length >= 8) {
      lengthCheck.classList.remove('opacity-50');
      lengthCheck.querySelector('#length-icon').textContent = 'âœ“';
      lengthCheck.querySelector('#length-icon').className = 'text-green-600 font-bold';
      lengthCheck.querySelector('span:first-child').classList.add('border-green-600', 'bg-green-50');
    } else {
      lengthCheck.classList.add('opacity-50');
      lengthCheck.querySelector('#length-icon').textContent = 'â—‹';
      lengthCheck.querySelector('span:first-child').classList.remove('border-green-600', 'bg-green-50');
    }

    // Check match
    if (password && confirmed && password === confirmed) {
      matchCheck.classList.remove('opacity-50');
      matchCheck.querySelector('#match-icon').textContent = 'âœ“';
      matchCheck.querySelector('#match-icon').className = 'text-green-600 font-bold';
      matchCheck.querySelector('span:first-child').classList.add('border-green-600', 'bg-green-50');
    } else {
      matchCheck.classList.add('opacity-50');
      matchCheck.querySelector('#match-icon').textContent = 'â—‹';
      matchCheck.querySelector('span:first-child').classList.remove('border-green-600', 'bg-green-50');
    }
  }

  if (passwordField && confirmField) {
    passwordField.addEventListener('input', updateChecks);
    confirmField.addEventListener('input', updateChecks);
  }
});
</script>
