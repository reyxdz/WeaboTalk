<div class="min-h-screen bg-linear-to-br from-blue-50 to-indigo-100 flex items-center justify-center px-4 py-12">
  <div class="bg-white rounded-2xl shadow-2xl w-full max-w-md p-8">
    <!-- Header -->
    <div class="text-center mb-8">
      <div class="text-5xl font-bold text-indigo-600 mb-2">WT</div>
      <h1 class="text-3xl font-bold text-gray-900 mb-2">WeaboTalk</h1>
      <p class="text-gray-600">Welcome back, anime enthusiast!</p>
    </div>

    <!-- Form -->
    <%= form_with model: resource, as: resource_name, local: true, url: user_session_path, html: { data: { controller: "form-validation", validation_url: validate_form_path, validation_type: "login" } }, class: "space-y-4" do |form| %>
      <!-- Flash Messages (Devise alerts) -->
      <% if notice.present? %>
        <div class="bg-green-50 border-l-4 border-green-500 p-4 mb-4">
          <p class="text-green-800 font-semibold"><%= notice %></p>
        </div>
      <% end %>

      <% if alert.present? %>
        <div class="bg-yellow-50 border-l-4 border-yellow-500 p-4 mb-4">
          <p class="text-yellow-800 font-semibold"><%= alert %></p>
        </div>
      <% end %>

      <!-- Error Messages -->
      <% if resource.errors.any? %>
        <div class="bg-red-50 border-l-4 border-red-500 p-4 mb-4">
          <h4 class="font-semibold text-red-800 mb-2">
            <%= pluralize(resource.errors.count, "error") %> prohibited login:
          </h4>
          <ul class="list-disc list-inside text-red-700 text-sm space-y-1">
            <% resource.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <!-- Email Field -->
      <div>
        <%= form.label :email, "Email Address", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.email_field :email,
            class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent",
            placeholder: "you@example.com",
            autofocus: true,
            autocomplete: "email" %>
      </div>

      <!-- Password Field -->
      <div>
        <%= form.label :password, "Password", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.password_field :password,
            class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent",
            placeholder: "Enter your password",
            autocomplete: "current-password" %>
      </div>

      <!-- Remember Me Checkbox -->
      <% if devise_mapping.rememberable? %>
        <div class="flex items-center">
          <%= form.check_box :remember_me, class: "h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded" %>
          <%= form.label :remember_me, "Remember me", class: "ml-2 block text-sm text-gray-700" %>
        </div>
      <% end %>

      <!-- Submit Button -->
      <button type="submit" class="w-full bg-indigo-600 hover:bg-indigo-700 text-white font-semibold py-2 px-4 rounded-lg transition duration-200 mt-6">
        Sign In
      </button>
    <% end %>

    <!-- Links -->
    <div class="mt-6 space-y-4">
      <!-- Sign Up Link -->
      <div class="text-center">
        <p class="text-gray-600 text-sm">
          Don't have an account?
          <%= link_to "Sign up here", new_user_registration_path, class: "text-indigo-600 hover:text-indigo-700 font-semibold" %>
        </p>
      </div>

      <!-- Password Reset Link -->
      <% if devise_mapping.recoverable? %>
        <div class="text-center">
          <p class="text-gray-600 text-sm">
            <%= link_to "Forgot your password?", new_user_password_path, class: "text-indigo-600 hover:text-indigo-700 font-semibold" %>
          </p>
        </div>
      <% end %>

      <!-- Confirmation Instructions Link -->
      <% if devise_mapping.confirmable? %>
        <div class="text-center">
          <p class="text-gray-600 text-sm">
            <%= link_to "Didn't receive confirmation instructions?", new_user_confirmation_path, class: "text-indigo-600 hover:text-indigo-700 font-semibold" %>
          </p>
        </div>
      <% end %>
    </div>

    <!-- Security Notice -->
    <div class="mt-4 p-4 bg-blue-50 border-l-4 border-blue-400 rounded">
      <p class="text-blue-800 text-xs text-center">
        Your account is protected with industry-standard encryption
      </p>
    </div>
  </div>
</div>
