<turbo-stream action="prepend" target="comments-<%= @post.id %>">
  <template>
    <%= render "comments/comment", comment: @comment, post: @post %>
  </template>
</turbo-stream>

<turbo-stream action="update" target="post-actions-<%= @post.id %>">
  <template>
    <%= render "likes/like_button", post: @post %>
    <%= render "reactions/reaction_button", post: @post %>
    <%= link_to "ðŸ’¬ Comment", post_path(@post), class: "flex-1 py-2 text-center rounded-lg hover:bg-slate-700/50 text-slate-300 transition font-semibold text-sm" %>
  </template>
</turbo-stream>

<turbo-stream action="replace" target="comment-form-<%= @post.id %>">
  <template>
    <div id="comment-form-<%= @post.id %>">
      <%= form_with(model: [@post, Comment.new], local: true, class: "space-y-4") do |form| %>
        <div>
          <%= form.text_area :content, rows: 3, placeholder: "Share your thoughts...", class: "w-full bg-slate-700/50 border border-slate-600/50 rounded-lg px-4 py-3 text-slate-100 placeholder-slate-500 focus:outline-none focus:ring-2 focus:ring-purple-500" %>
        </div>
        <div class="flex gap-2">
          <%= form.submit "Post Comment", class: "px-4 py-2 bg-gradient-to-r from-purple-600 to-pink-600 text-white rounded-lg hover:shadow-lg hover:shadow-purple-500/50 transition font-semibold" %>
        </div>
      <% end %>
    </div>
  </template>
</turbo-stream>
