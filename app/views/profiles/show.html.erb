<div class="min-h-screen bg-linear-to-br from-slate-950 via-slate-900 to-slate-950">
  <!-- Animated Background Orbs -->
  <div class="fixed inset-0 overflow-hidden pointer-events-none">
    <div class="absolute top-0 left-1/4 w-96 h-96 bg-purple-500/20 rounded-full blur-3xl animate-pulse"></div>
    <div class="absolute bottom-0 right-1/4 w-96 h-96 bg-pink-500/20 rounded-full blur-3xl animate-pulse" style="animation-delay: 2s;"></div>
    <div class="absolute top-1/2 right-0 w-96 h-96 bg-indigo-500/20 rounded-full blur-3xl animate-pulse" style="animation-delay: 4s;"></div>
  </div>

  <!-- Content -->
  <div class="relative z-10">
    <!-- Profile Header with Banner -->
    <div class="relative">
      <!-- Banner Image -->
      <div class="relative h-64 md:h-80 overflow-hidden">
        <% if @profile.banner.attached? %>
          <%= image_tag @profile.banner, alt: "Banner", class: "w-full h-full object-cover" %>
          <div class="absolute inset-0 bg-linear-to-b from-transparent via-transparent to-slate-950"></div>
        <% else %>
          <div class="w-full h-full bg-linear-to-r from-purple-600/40 via-pink-600/40 to-indigo-600/40 backdrop-blur-md"></div>
          <div class="absolute inset-0 bg-linear-to-b from-transparent via-transparent to-slate-950"></div>
        <% end %>
      </div>

      <!-- Profile Info Section (positioned over banner) -->
      <div class="relative px-4 sm:px-6 lg:px-8 pb-12">
        <div class="flex flex-col md:flex-row gap-6 -mt-20 md:-mt-24">
          <!-- Avatar -->
          <div class="shrink-0">
            <div class="relative">
              <% if @profile.avatar.attached? %>
                <%= image_tag @profile.avatar, alt: "Avatar", class: "w-40 h-40 md:w-48 md:h-48 rounded-full border-4 border-slate-900 shadow-2xl object-cover ring-2 ring-purple-500/50" %>
              <% else %>
                <div class="w-40 h-40 md:w-48 md:h-48 rounded-full border-4 border-slate-900 shadow-2xl bg-linear-to-br from-purple-500/20 to-pink-500/20 flex items-center justify-center ring-2 ring-purple-500/50 backdrop-blur">
                  <svg class="w-20 h-20 md:w-24 md:h-24 text-purple-400/50" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd" />
                  </svg>
                </div>
              <% end %>
            </div>
          </div>

          <!-- User Info -->
          <div class="flex-1 pt-2">
            <div class="flex flex-col md:flex-row md:items-start md:justify-between gap-6">
              <div>
                <h1 class="text-4xl md:text-5xl font-black bg-linear-to-r from-purple-300 via-pink-300 to-indigo-300 bg-clip-text text-transparent"><%= @profile.username %></h1>
                <p class="text-purple-300/70 mt-2 text-lg">@<%= @profile.username %></p>
              </div>
              
              <!-- Edit Profile Button (only for own profile) -->
              <% if @is_own_profile %>
                <%= link_to "Edit Profile", edit_profile_path(@profile.username), 
                    class: "px-6 py-3 bg-linear-to-r from-purple-600 to-pink-600 hover:from-purple-500 hover:to-pink-500 text-white font-bold rounded-lg transition duration-300 shadow-lg hover:shadow-purple-500/50 transform hover:scale-105 whitespace-nowrap h-fit" %>
              <% else %>
                <!-- Add Friend Button (for other profiles) -->
                <% friendship = current_user&.friendships&.find_by(friend_id: @user.id) %>
                <% if current_user && current_user.id != @user.id %>
                  <% if friendship&.status == "accepted" %>
                    <button class="px-6 py-3 bg-green-600/50 text-green-300 font-bold rounded-lg cursor-default whitespace-nowrap h-fit" disabled>✓ Friends</button>
                  <% elsif friendship&.status == "pending" %>
                    <button class="px-6 py-3 bg-yellow-600/50 text-yellow-300 font-bold rounded-lg cursor-default whitespace-nowrap h-fit" disabled>⏳ Pending</button>
                  <% else %>
                    <%= button_to "Add Friend", friendships_path(friend_id: @user.id), method: :post, 
                        class: "px-6 py-3 bg-linear-to-r from-purple-600 to-pink-600 hover:from-purple-500 hover:to-pink-500 text-white font-bold rounded-lg transition duration-300 shadow-lg hover:shadow-purple-500/50 transform hover:scale-105 whitespace-nowrap" %>
                  <% end %>
                <% end %>
              <% end %>
            </div>

            <!-- Bio -->
            <% if @profile.bio.present? %>
              <p class="text-slate-300 mt-6 text-base leading-relaxed max-w-prose"><%= @profile.bio %></p>
            <% end %>

            <!-- Stats -->
            <div class="flex gap-8 mt-8">
              <div class="text-center">
                <p class="text-3xl md:text-4xl font-black bg-linear-to-r from-blue-400 to-cyan-400 bg-clip-text text-transparent"><%= @posts_count %></p>
                <p class="text-slate-400 mt-1 text-sm font-medium">Posts</p>
              </div>
              <div class="text-center">
                <p class="text-3xl md:text-4xl font-black bg-linear-to-r from-pink-400 to-rose-400 bg-clip-text text-transparent"><%= @friends_count %></p>
                <p class="text-slate-400 mt-1 text-sm font-medium">Friends</p>
              </div>
            </div>
          </div>
        </div>

        <!-- Joined Date & Additional Info -->
        <div class="mt-8 pt-8 border-t border-slate-700/50">
          <div class="flex flex-wrap gap-8 text-sm text-slate-300">
            <!-- Member Since -->
            <div class="flex items-center gap-3">
              <div class="p-2 bg-purple-500/20 rounded-lg backdrop-blur">
                <svg class="w-5 h-5 text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                </svg>
              </div>
              <span>Joined <%= @profile.created_at.strftime("%B %Y") %></span>
            </div>

            <!-- Email Verified -->
            <div class="flex items-center gap-3">
              <div class="p-2 bg-green-500/20 rounded-lg backdrop-blur">
                <svg class="w-5 h-5 text-green-400" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                </svg>
              </div>
              <span>Email verified</span>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Main Content Container -->
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        <!-- Posts Section -->
        <div class="lg:col-span-2">
          <div class="bg-slate-800/50 backdrop-blur-lg border border-slate-700/50 rounded-xl p-8 shadow-xl hover:shadow-purple-500/10 transition">
            <h2 class="text-2xl font-black bg-linear-to-r from-purple-300 via-pink-300 to-indigo-300 bg-clip-text text-transparent mb-6">Posts</h2>
            <% if @posts.any? %>
              <div class="space-y-6">
                <% @posts.each do |post| %>
                  <%= render "posts/post", post: post %>
                <% end %>
              </div>
            <% else %>
              <div class="text-center py-16">
                <div class="p-4 bg-slate-700/30 rounded-full w-fit mx-auto mb-4 backdrop-blur">
                  <svg class="w-12 h-12 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m0 0h6m0 0v6m0-6h-6m0 0V6" />
                  </svg>
                </div>
                <p class="text-slate-400 font-medium">No posts yet</p>
                <p class="text-slate-500 text-sm mt-2">Start sharing your thoughts with the community</p>
              </div>
            <% end %>
          </div>
        </div>

        <!-- Sidebar -->
        <div class="lg:col-span-1 space-y-6">
          <!-- About Card -->
          <div class="bg-slate-800/50 backdrop-blur-lg border border-slate-700/50 rounded-xl p-6 shadow-xl hover:shadow-pink-500/10 transition">
            <h3 class="text-lg font-black text-slate-100 mb-5">About</h3>
            <ul class="space-y-4 text-sm text-slate-300">
              <li class="flex items-start gap-3 p-3 rounded-lg bg-slate-700/20 backdrop-blur">
                <svg class="w-5 h-5 text-purple-400 shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
                <span class="text-slate-200"><%= @user.email %></span>
              </li>
              <li class="flex items-start gap-3 p-3 rounded-lg bg-slate-700/20 backdrop-blur">
                <svg class="w-5 h-5 text-green-400 shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
                </svg>
                <span class="text-slate-200"><%= @user.confirmed? ? "Email verified" : "Email pending" %></span>
              </li>
            </ul>
          </div>

          <!-- Quick Actions (for own profile) -->
          <% if @is_own_profile %>
            <div class="bg-linear-to-br from-purple-900/40 to-pink-900/40 backdrop-blur-lg border border-purple-500/30 rounded-xl p-6 shadow-xl hover:shadow-purple-500/20 transition">
              <h3 class="text-lg font-black text-slate-100 mb-5">Quick Actions</h3>
              <div class="space-y-3">
                <%= link_to "Edit Profile", edit_profile_path(@profile.username), 
                    class: "block px-4 py-3 bg-linear-to-r from-purple-600 to-pink-600 hover:from-purple-500 hover:to-pink-500 text-white font-bold rounded-lg transition duration-300 shadow-lg hover:shadow-purple-500/50 transform hover:scale-105 text-center" %>
                <%= link_to "Account Settings", "#", 
                    class: "block px-4 py-3 bg-slate-700/50 hover:bg-slate-700 text-slate-300 font-semibold rounded-lg transition duration-300 backdrop-blur text-center opacity-50 cursor-not-allowed", 
                    onclick: "return false" %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
