<div class="min-h-screen bg-gradient-to-br from-blue-50 to-indigo-100">
  <div class="container mx-auto px-4 py-16">
    <div class="text-center">
      <div class="text-6xl font-bold text-indigo-600 mb-4">WT</div>
      <h1 class="text-4xl font-bold text-gray-900 mb-4">Welcome to WeaboTalk</h1>
      <p class="text-xl text-gray-600 mb-8">Your anime community awaits!</p>
      
      <% if user_signed_in? %>
        <div class="space-y-4">
          <p class="text-lg text-gray-700">
            Welcome back, <%= current_user.email %>!
          </p>
          <div class="flex justify-center gap-4">
            <%= link_to "Dashboard", root_path, class: "btn btn-primary" %>
            <%= link_to "Sign Out", destroy_user_session_path, method: :delete, class: "btn btn-outline" %>
          </div>
        </div>
      <% else %>
        <div class="space-y-4">
          <p class="text-lg text-gray-700 mb-6">
            Join thousands of anime fans connecting on WeaboTalk
          </p>
          <div class="flex justify-center gap-4">
            <%= link_to "Sign Up", new_user_registration_path, class: "px-8 py-3 bg-indigo-600 hover:bg-indigo-700 text-white font-semibold rounded-lg transition duration-200" %>
            <%= link_to "Sign In", new_user_session_path, class: "px-8 py-3 bg-white border-2 border-indigo-600 text-indigo-600 hover:bg-indigo-50 font-semibold rounded-lg transition duration-200" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
